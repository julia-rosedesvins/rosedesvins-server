                                                        <tr>
                                                            <td>
                                                                <table cellpadding="0" cellspacing="0" border="0">
                                                                    <tr>
                                                                        <td style="vertical-align: middle; padding-right: 8px;">
                                                                            <img src="https://api.rosedesvins.co/v1/web/image/total%20amount" alt="Price" width="16" height="16" style="display: block;">
                                                                        </td>
                                                                        <td style="vertical-align: middle;">
                                                                            <span style="color: #3A7B59; font-weight: 700; font-size: 16px;">{{totalPrice}}</span>
                                                                        </td>
                                                                    </tr>
                                                                </table>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>

                                <!-- Description -->
                                <tr>
                                    <td style="clear: both; color: #666; font-size: 15px; line-height: 1.7; margin-top: 20px; padding-top: 20px; border-top: 1px solid #e0e0e0;">
                                        <p style="margin: 0;">{{serviceDescription}}</p>
                                    </td>
                                </tr>

                                <!-- Additional Notes -->
                                {{#if additionalNotes}}
                                <tr>
                                    <td style="padding-top: 20px;">
                                        <table width="100%" cellpadding="0" cellspacing="0" border="0">
                                            <tr>
