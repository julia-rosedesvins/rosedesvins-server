# Database
MONGODB_URI=mongodb://localhost:27017/rosedesvins

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Redis (for email queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (SMTP - Legacy)
SMTP_HOST=smtp.eu.mailgun.org
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-mailgun-smtp-user@your-domain.com
SMTP_PASS=your-mailgun-smtp-password

# Mailgun HTTP API Configuration (Recommended)
MAILGUN_API_KEY=key-your-mailgun-api-key
MAILGUN_DOMAIN=mail.yourdomain.com

# Email Settings
FROM_EMAIL=noreply@rosedesvins.com
FROM_NAME=Rose des Vins
ADMIN_EMAIL=admin@rosedesvins.com

# Client URL
CLIENT_URL=http://localhost:3000

# Microsoft Calendar Integration
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=your-microsoft-tenant-id
MICROSOFT_REDIRECT_URI=http://localhost:3000/auth/microsoft/callback
